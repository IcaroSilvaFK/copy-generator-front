generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RequestCopy {
  id           String         @id @default(cuid())
  copyTitle    String         @map("copy_title")
  description  String
  createdAt    DateTime       @default(now()) @map("create_at")
  ResponseCopy ResponseCopy[]

  @@map("requests_copys")
}

model ResponseCopy {
  id              String      @id @default(cuid())
  copyTitle       String      @map("copy_title")
  generatedCopy   String      @map("generated_copy")
  requestedCopyId String
  requestedCopy   RequestCopy @relation(fields: [requestedCopyId], references: [id])
  createdAt       DateTime    @default(now()) @map("created_at")

  @@index([requestedCopyId])
  @@map("responses_copys")
}
